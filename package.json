{
  "name": "wikiwars-soundboard",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Julien Tanay",
    "email": "julien@wikiwars.gg",
    "url": "https://wikiwars.gg"
  },
  "description": "Wikiwars SoundBoard App",
  "main": "main/index.js",
  "scripts": {
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "build": "yarn build-renderer && yarn build-electron",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "electron .",
    "dist": "yarn build && electron-builder",
    "pack-app": "yarn build && electron-builder --dir",
    "precommit": "lint-staged",
    "test": "jest --passWithNoTests",
    "type-check": "tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-brands-svg-icons": "5.13.1",
    "@fortawesome/free-solid-svg-icons": "5.13.1",
    "@fortawesome/react-fontawesome": "0.1.11",
    "dotenv": "8.2.0",
    "electron-is-dev": "1.2.0",
    "electron-next": "3.1.5",
    "next": "9.3.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-konami-code": "1.4.3",
    "react-player": "1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@emotion/babel-preset-css-prop": "10.0.27",
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "@types/node": "13.13.14",
    "@types/react": "16.9.41",
    "babel-plugin-macros": "2.8.0",
    "conventional-changelog-gitmoji": "0.2.5",
    "electron": "8.2.5",
    "electron-builder": "22.5.1",
    "husky": "4.2.5",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.10",
    "prettier": "2.0.5",
    "ts-jest": "25.2.1",
    "ts-node-dev": "1.0.0-pre.51",
    "twin.macro": "1.0.0",
    "typescript": "3.8.3"
  },
  "build": {
    "appId": "gg.wikiwars.soundboard",
    "files": [
      "main",
      "renderer/out"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/public/icons/mac.icns",
      "darkModeSupport": true,
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  }
}
